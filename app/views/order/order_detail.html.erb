<div class="container">
   <div class="row">
            <div class="col featured-item">
              <center>
                 <h1>Order Details</h1>  
                    <table class= "myTable" style="width: 50%">
                    <tr>
                       <th>Order Id</th>
                       <th>Date</th>
                       <th>Total amount</th>
                       <th>Coupon Benifit</th>
                       <th>Final Amount</th>
                       <th>Delivery Date</th>
                    </tr>
                    <tr>
                         <td><%= @order.ref_id %></td>
                         <td><%= @order.created_at.strftime("%y-%m-%d") %></td>
                         <td><%= @order.final_amount + (@order.coupon_benifit rescue 0) %></td>
                         <td><%= @order.coupon_benifit rescue 0%></td>
                         <td><%= @order.final_amount %></td>
                         <td><%= @order.delivery_date %></td>
                    </tr>
                 </table> 
              </center>
          </div>
    </div>
</div>

<div class="container">
   <div class="row">
            <div class="col featured-item">
              <center>
                 <h1>Transactions</h1>  
                    <table class= "myTable" style="width: 50%">
                    <tr>
                       <th>Transaction Id</th>
                       <th>Date</th>
                       <th>Description</th>
                       <th>Transaction_type</th>
                       <th>Email</th>
                       <th>Amount</th>
                    </tr>
                    <tr>
                      <% @transactions.each do |tr| %>  
                         <td><%= tr.ref_id %></td>
                         <td><%= tr.created_at.strftime("%y/%m/%d") %></td>
                         <td><%= tr.description %></td>
                         <td><%= tr.transaction_type %></td>
                         <% if !tr.admin_id.present? %>
                            <td><%= current_user.email %></td>
                         <% else %>
                            <td><%= Admin.first.email %></td>
                         <% end %>   
                         <td><%= tr.amount %></td>
                    </tr>
                    <% end %>
                 </table> 
              </center>
          </div>
    </div>
</div>

  <style>
.myTable { 
  width: 100%;
  text-align: left;
  background-color: white;
  border-collapse: collapse; 
  }
.myTable th { 
  background-color: lightgreen;
  color: salmon; 
  }
.myTable td, 
.myTable th { 
  padding: 10px;
  border: 1px solid black; 
  }
  tr:nth-child(even) {background-color: #F0ffff;}
    </style>